			"item": [
				{
					"name": "Health Check",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status code is 200 or 503', function () {",
									"    pm.expect([200, 503]).to.include(pm.response.code);",
									"});",
									"",
									"pm.test('Response has status field', function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.status).to.exist;",
									"    pm.expect(['UP', 'DOWN']).to.include(jsonData.status);",
									"});",
									"",
									"pm.test('Response has checks object', function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.checks).to.exist;",
									"    pm.expect(jsonData.checks.database).to.exist;",
									"});"
								]
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/health",
							"host": ["{{baseUrl}}"],
							"path": ["health"]
						}
					},
					"response": []
				}
